<%= form_for task_path do |f| %>

	<% if @task.errors.any? %>
		<div id="error_explanation">
			<h2>
				<%=pluralize(@task.errors.count, "error") %> prohibited
				this task from being seved:
			</h2>
			<ul>
				<%@task.errors.full_messages.each do |msg| %>
				<li> <%= msg %> </li>
				<% end %>
			</ul>
		</div>
	<% end %>	

  <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>
 
  <p>
    <%= f.label :description %><br>
    <%= f.text_area :description %>
  </p>
 
<% end %>	