<%= link_to 'Back', projects_path %>
<%= link_to 'Edit', edit_project_path(@project) %> 

<style type="text/css">
.block1{
	border: solid 1px  black;
	width: 50%;
}
.block2{
	border: solid 1px  black;
	width: 50%;
	top: 10px;
	padding: 5px;
}

</style>

<div class="block1">
	<div class="block2">
		<p>
		  <strong>Name:</strong>
		  <%= @project.name %>
		</p>
		 
		<p>
		  <strong>Summary:</strong>
		  <%= @project.summary %>
		</p>
	</div>
	<div class="block2">
		<h2>Tasks</h2>
		<% @project.tasks.each do |task| %>
		  <p>
			<strong>Title:</strong>
			<%= task.title %>
		  </p>
			
		  <p>
			<strong>Description:</strong>
			<%= task.description %>
		  </p>
		 
		 <p>
			<strong>Status:</strong>
			<%= task.status %>
		  </p>
		  
		  <td><%= link_to 'Show', [task.project, task]  %></td>
		  <td><%= link_to 'Edit', edit_project_task_path(task) %></td>
		  <td><%= link_to 'Destroy', task_path(task), method: :delete, data:{confirm: 'Are you sure?'} %></td>
		  <hr>
		<% end %>
	</div>
	<div class="block2">
		<h2>Add a task:</h2>
		<%= form_for([@project, @project.tasks.build]) do |f| %>
		  <p>
			<%= f.label :title %><br>
			<%= f.text_field :title %>
			
		  </p>
		  <p>
			<%= f.label :description %><br>
			<%= f.text_area :description %>
		  </p>
		  
		  <p>
			<strong>Name:</strong>
			<%= select_tag(:user_id, options_from_collection_for_select(@users, :id, :first_name))%>
		  </p>
			

		  <p>
			<%= f.submit %>
		  </p>
		<% end %>
	</div>  
  
</div>